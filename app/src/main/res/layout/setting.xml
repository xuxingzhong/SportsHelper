<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.sportshelper.Setting"
    android:orientation="vertical">
    <include layout="@layout/back_toolbar"
        android:id="@+id/Setting_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_0dp"
        android:layout_weight="@dimen/weight_1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@color/color_d6d6d6"
                android:text="@string/settingOfStepCount"
                android:textColor="@color/color_2387f5"
                android:textSize="@dimen/dimen_12sp"
                android:gravity="left|center"
                android:paddingLeft="@dimen/dimen_16dp"/>
            <TextView
                android:id="@+id/person_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56dp"
                android:text="@string/personal_information"
                android:textColor="@color/color_ff191919"
                android:textSize="@dimen/dimen_16sp"
                android:gravity="left|center"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:id="@+id/sport_target"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/sport_target"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
                <TextView
                    android:id="@+id/RTStepTarget"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/dimen_12sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@color/color_d6d6d6"
                android:text="@string/settingOfRemind"
                android:textColor="@color/color_2387f5"
                android:textSize="@dimen/dimen_12sp"
                android:gravity="left|center"
                android:paddingLeft="@dimen/dimen_16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56dp">
                <TextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/SedentaryReminder"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp" />
                <ImageView
                    android:id="@+id/SedentaryReminderSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dimen_16dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:id="@+id/startTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/startTime"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
                <TextView
                    android:id="@+id/startTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/dimen_12sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:id="@+id/endTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/endTime"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
                <TextView
                    android:id="@+id/endTimeText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/dimen_12sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp">
                <LinearLayout
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/weight_1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_weight="@dimen/weight_1"
                        android:text="@string/unDisturb"
                        android:textColor="@color/color_ff191919"
                        android:textSize="@dimen/dimen_16sp"
                        android:gravity="left|bottom"
                        android:layout_marginLeft="@dimen/dimen_16dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_0dp"
                        android:layout_weight="@dimen/weight_1"
                        android:text="@string/unDisturbTime"
                        android:textColor="@color/color_808080"
                        android:textSize="@dimen/dimen_12sp"
                        android:gravity="left|center"
                        android:layout_marginLeft="@dimen/dimen_16dp" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/unDisturbSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dimen_16dp" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_30dp"
                android:background="@color/color_d6d6d6"
                android:text="@string/settingOfRunning"
                android:textColor="@color/color_2387f5"
                android:textSize="@dimen/dimen_12sp"
                android:gravity="left|center"
                android:paddingLeft="@dimen/dimen_16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56dp">
                <TextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/AutoPause"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp" />
                <ImageView
                    android:id="@+id/AutoPauseSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dimen_16dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_56dp">
                <TextView
                    android:layout_width="@dimen/dimen_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/screenOn"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp" />
                <ImageView
                    android:id="@+id/screenOnSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/dimen_16dp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:id="@+id/VoiceAnnouncements"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/VoiceAnnouncements"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
                <TextView
                    android:id="@+id/VoiceAnnouncementsSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/dimen_12sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
            <LinearLayout
                android:id="@+id/RunningTarget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:text="@string/runningTarget"
                    android:textColor="@color/color_ff191919"
                    android:textSize="@dimen/dimen_16sp"
                    android:gravity="left|bottom"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
                <TextView
                    android:id="@+id/RunningTargetText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_weight="@dimen/weight_1"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/dimen_12sp"
                    android:gravity="left|center"
                    android:layout_marginLeft="@dimen/dimen_16dp"
                    android:layout_marginRight="@dimen/dimen_16dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_1dp"
                android:background="@color/color_d6d6d6"
                android:layout_marginLeft="@dimen/dimen_16dp"
                android:layout_marginRight="@dimen/dimen_16dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
